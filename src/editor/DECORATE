// Editor-specific

actor CmanCursor
{
    +NOGRAVITY
    +NOCLIP
    +FORCEXYBILLBOARD
    RenderStyle "AddStencil"
    StencilColor "00 FF 00"
    Scale 0.16
    Alpha 0.5

    States
    {
        Spawn:
            BFS1 A 1 Bright
            Loop
    }
}

actor CmanPathMarker
{
    +NOGRAVITY
    +NOCLIP
    +FORCEXYBILLBOARD
    RenderStyle "AddStencil"
    StencilColor "00 FF 00"
    Scale 0.1
    Alpha 0.3

    var int user_animation_delay;

    States
    {
        Spawn:
            BFS1 A 1 Bright
            Loop
        Animated:
            BFS1 A 1 Bright
            {
                A_SetRenderStyle(0.1, STYLE_AddStencil);
                A_SetTics(user_animation_delay);
            }
            Goto AnimatedLoop
        AnimatedLoop:
            BFS1 A 1 Bright A_SetRenderStyle(0.1, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.2, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.3, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.4, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.5, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.6, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.8, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(1.0, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.8, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.6, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.4, STYLE_AddStencil)
            BFS1 A 1 Bright A_SetRenderStyle(0.2, STYLE_AddStencil)
            BFS1 A 10 Bright A_SetRenderStyle(0.1, STYLE_AddStencil)
            Loop
    }
}

actor CmanTempPathMarker : CmanPathMarker
{
    StencilColor "AA AA AA"
}

// Common with player

actor CmanCamera
{
    +NOGRAVITY
    +NOCLIP
}
